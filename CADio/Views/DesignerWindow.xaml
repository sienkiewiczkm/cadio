<Window x:Class="CADio.Views.DesignerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CADio"
        xmlns:rendering="clr-namespace:CADio.Rendering"
        mc:Ignorable="d"
        Title="CADio" Height="600" Width="600">
    <Grid>
        <rendering:RenderTarget Background="Black" Renderer="{Binding ActiveRenderer}"
                            MouseDown="OnMouseDown" MouseUp="OnMouseUp" MouseMove="OnMouseMove" MouseWheel="OnMouseWheel"/>
    </Grid>
</Window>
