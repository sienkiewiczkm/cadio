<Window x:Class="CADio.Views.DesignerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CADio"
        xmlns:rendering="clr-namespace:CADio.Rendering"
        xmlns:views="clr-namespace:CADio.Views"
        xmlns:shapes="clr-namespace:CADio.Geometry.Shapes"
        xmlns:shapeEditors="clr-namespace:CADio.Views.ShapeEditors"
        mc:Ignorable="d"
        Width="800" Height="600"
        Title="CADio">
    <Window.Resources>
        <DataTemplate DataType="{x:Type shapes:Torus}">
            <shapeEditors:TorusEditor/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        
        <rendering:RenderTarget Grid.RowSpan="2" Background="Black" Renderer="{Binding ActiveRenderer}"
            MouseDown="OnMouseDown" MouseUp="OnMouseUp" MouseMove="OnMouseMove" MouseWheel="OnMouseWheel"/>
        
        <views:SceneTree Grid.Row="0"  Grid.Column="1" DataContext="{Binding SceneTreeViewModel}"/>
        <ContentPresenter Grid.Row="1" Grid.Column="1" Content="{Binding SceneTreeViewModel.SelectedShape}"/>
    </Grid>
</Window>
