<Window x:Class="CADio.Views.DesignerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CADio"
        xmlns:rendering="clr-namespace:CADio.Rendering"
        xmlns:views="clr-namespace:CADio.Views"
        xmlns:shapes="clr-namespace:CADio.Geometry.Shapes"
        xmlns:shapeEditors="clr-namespace:CADio.Views.ShapeEditors"
        mc:Ignorable="d"
        Width="800" Height="600"
        Title="CADio"
        Loaded="OnLoaded">
    <Window.Resources>
        <DataTemplate DataType="{x:Type shapes:Torus}">
            <shapeEditors:TorusEditor/>
        </DataTemplate>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <ToolBar DockPanel.Dock="Top">
            <CheckBox IsChecked="{Binding ElementName=RT, Path=Enable3D}">Enable 3D</CheckBox>
        </ToolBar>
        <StackPanel DockPanel.Dock="Right" Width="200">
            <views:SceneTree Height="200" DataContext="{Binding SceneTreeViewModel}"/>
            <ContentPresenter Content="{Binding SceneTreeViewModel.SelectedShape}"/>
        </StackPanel>

        <rendering:RenderTarget x:Name="RT" Renderer="{Binding ActiveRenderer}"
            MouseDown="OnMouseDown" MouseUp="OnMouseUp" MouseMove="OnMouseMove" MouseWheel="OnMouseWheel" SizeChanged="OnSizeChange"/>
    </DockPanel>
</Window>
